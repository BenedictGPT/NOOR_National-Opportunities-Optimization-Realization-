# NOOR Platform - Production Environment Variables

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://user:password@host:5432/noor_prod
REDIS_URL=redis://host:6379/0

# ============================================================================
# API Keys (Already configured in sandbox)
# ============================================================================
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
SUPABASE_URL=${SUPABASE_URL}
SUPABASE_KEY=${SUPABASE_KEY}
OPENAI_API_KEY=${OPENAI_API_KEY}

# ============================================================================
# Application Configuration
# ============================================================================
APP_ENV=production
DEBUG=false
LOG_LEVEL=info
SECRET_KEY=<generate-strong-random-key>

# ============================================================================
# CORS Configuration
# ============================================================================
ALLOWED_ORIGINS=https://noor-platform.vercel.app,https://noor.railway.app

# ============================================================================
# Frontend Configuration
# ============================================================================
NEXT_PUBLIC_API_URL=https://noor-backend.vercel.app
NEXT_PUBLIC_APP_URL=https://noor-platform.vercel.app
NEXT_PUBLIC_ENV=production

# ============================================================================
# File Storage (Optional)
# ============================================================================
S3_BUCKET=noor-uploads-prod
S3_REGION=us-east-1
CDN_URL=https://cdn.noor.ae

