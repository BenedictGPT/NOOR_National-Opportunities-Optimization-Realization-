# NOOR Platform Environment Configuration
# Copy this file to .env and fill in actual values

# Environment
ENVIRONMENT=development
DEBUG=true

# Database Passwords
POSTGRES_PASSWORD=change_me_postgres
MONGO_PASSWORD=change_me_mongo
NEO4J_PASSWORD=change_me_neo4j
REDIS_PASSWORD=change_me_redis
ELASTIC_PASSWORD=change_me_elastic

# Database URLs
DATABASE_URL=postgresql://noor_user:${POSTGRES_PASSWORD}@localhost:5432/noor
MONGODB_URL=mongodb://noor_user:${MONGO_PASSWORD}@localhost:27017/noor
NEO4J_URL=bolt://localhost:7687
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379/0
ELASTICSEARCH_URL=http://elastic:${ELASTIC_PASSWORD}@localhost:9200
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# JWT Authentication
JWT_SECRET=change_me_jwt_secret_min_32_chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# UAE Pass OAuth
UAE_PASS_CLIENT_ID=your_uae_pass_client_id
UAE_PASS_CLIENT_SECRET=your_uae_pass_client_secret
UAE_PASS_REDIRECT_URI=https://noor.gov.ae/auth/callback
UAE_PASS_AUTHORIZATION_URL=https://stg-id.uaepass.ae/idshub/authorize
UAE_PASS_TOKEN_URL=https://stg-id.uaepass.ae/idshub/token
UAE_PASS_USERINFO_URL=https://stg-id.uaepass.ae/idshub/userinfo

# External API Keys
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key

# Biometric Services
BIOMETRIC_FACIAL_API_URL=https://api.biometric-provider.com/facial
BIOMETRIC_VOICE_API_URL=https://api.biometric-provider.com/voice
BIOMETRIC_API_KEY=your_biometric_api_key

# Health Integration (SEHA/DHA/MOHAP)
SEHA_API_URL=https://api.seha.ae
SEHA_API_KEY=your_seha_api_key
DHA_API_URL=https://api.dha.gov.ae
DHA_API_KEY=your_dha_api_key
MOHAP_API_URL=https://api.mohap.gov.ae
MOHAP_API_KEY=your_mohap_api_key

# Payroll & Pensions (GPSSA/ADPF)
GPSSA_API_URL=https://api.gpssa.gov.ae
GPSSA_API_KEY=your_gpssa_api_key
ADPF_API_URL=https://api.adpf.ae
ADPF_API_KEY=your_adpf_api_key

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@noor.gov.ae
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=NOOR Platform <noreply@noor.gov.ae>

# SMS Service
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+971xxxxxxxxx

# File Storage (S3 Compatible)
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=noor-platform
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_REGION=me-south-1

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS
CORS_ORIGINS=http://localhost:3000,https://noor.gov.ae

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
API_PREFIX=/api/v1

# Feature Flags
ENABLE_BIOMETRIC_AUTH=true
ENABLE_HEALTH_INTEGRATION=true
ENABLE_PAYROLL_INTEGRATION=true
ENABLE_FEDERAL_INTELLIGENCE=false

# Agent Configuration
MASTER_ORCHESTRATOR_MODEL=claude-3-opus-20240229
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT_SECONDS=300

